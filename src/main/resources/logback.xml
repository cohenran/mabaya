<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %cyan([%d{dd-MM-yyyy HH:mm:ss.SSS}]) %magenta([%-25thread]) %highlight([%-5level]) %boldYellow([%-36logger{36}.%-17M]):%yellow([%-3line]) %msg%n
            </pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>